<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.muirsuus.main_navigation.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_sectionFragment"
            app:destination="@id/sectionFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_navigation_home_to_litFragment"
            app:destination="@id/litFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_navigation_home_to_nav_host_fragment"
            app:destination="@id/calculation_nav_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <argument
            android:name="name"
            app:argType="string" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_net2"
            app:destination="@id/navigation_net"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_navigation_home_to_favouriteFragment"
            app:destination="@id/favouriteFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_navigation_home_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>


    <fragment
        android:id="@+id/sectionFragment"
        android:name="com.example.muirsuus.information_ui.section.SectionFragment"
        >
        <action
            android:id="@+id/action_sectionFragment_to_subsectionFragment"
            app:destination="@id/subsectionFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/sectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/litFragment"
        android:name="com.example.muirsuus.main_navigation.lit.LitFragment"
        tools:layout="@layout/lit_fragment" />
    <fragment
        android:id="@+id/subsectionFragment"
        android:name="com.example.muirsuus.information_ui.subsection.SubsectionFragment"
        >
        <action
            android:id="@+id/action_subsectionFragment_to_pointsFragment"
            app:destination="@id/pointsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <argument
            android:name="section"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/pointsFragment"
        android:name="com.example.muirsuus.information_ui.point.PointsFragment"
        >
        <action
            android:id="@+id/action_pointsFragment_to_informationFragment"
            app:destination="@id/informationFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <argument
            android:name="subsection"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/informationFragment"
        android:name="com.example.muirsuus.information_ui.information.InformationFragment"
        >
        <argument
            android:name="point"
            app:argType="string" />
    </fragment>
    <include app:graph="@navigation/calculation_graph" />
    <fragment
        android:id="@+id/navigation_net"
        android:name="com.example.muirsuus.main_navigation.web.WebFragment"
        android:label="@string/title_net" />
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.example.muirsuus.main_navigation.favourite.FavouriteFragment"
        android:label="FavouriteFragment" >
        <action
            android:id="@+id/action_favouriteFragment_to_informationFragment"
            app:destination="@id/informationFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.muirsuus.main_navigation.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>
