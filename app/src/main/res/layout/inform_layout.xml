<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".InformActivity">


    <LinearLayout
        android:id="@+id/layout_with_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="91dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:background="@drawable/button_inf_style"
            android:text="Назначение"
            android:textColor="@color/lightGreenBackground"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_tth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:background="@drawable/button_inf_style"
            android:text="ТТХ"
            android:textColor="@color/lightGreenBackground"
            android:textSize="15sp" />

    </LinearLayout>


    <fragment
        android:id="@+id/fragment_managed_by_buttons"
        android:name="androidx.navigation.fragment.NavHostFragment"

        android:layout_width="match_parent"
        android:layout_height="667dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="64dp"
        app:defaultNavHost="true"
        app:navGraph="@navigation/button_graph" />

</RelativeLayout>