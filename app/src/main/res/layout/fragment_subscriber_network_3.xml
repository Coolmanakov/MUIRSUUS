<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Рассчетное время:"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/estimated_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:text="--"
        android:textColor="@color/Black"
        android:gravity="center"
        android:textSize="65sp"/>

    <EditText
        android:id="@+id/laying_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Скорость прокладки, м/мин"
        android:inputType="number"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/personnel_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Количество личного состава"
        android:inputType="numberDecimal"
        android:importantForAutofill="no" />

    <Spinner
        android:id="@+id/relief"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_item_height" />

    <Spinner
        android:id="@+id/terrain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_item_height" />

    <Spinner
        android:id="@+id/temperature"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_item_height" />

    <Spinner
        android:id="@+id/snow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_item_height" />

    <Spinner
        android:id="@+id/wind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_item_height" />

</LinearLayout>