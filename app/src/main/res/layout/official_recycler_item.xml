<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/official_type_header_item_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycler_section_header_height"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/official_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:text="@string/official_default_name"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/device_spinner"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_marginEnd="10dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/button_inf_style" />
</LinearLayout>