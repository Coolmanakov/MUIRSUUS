<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/division_type_spinner"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_section_header_height" />

    <Spinner
        android:id="@+id/official_type_spinner"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_section_header_height" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/official_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/transition_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transition_button_text"
        android:layout_gravity="end"/>

</LinearLayout>